<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>
<web-app>
  <display-name>WebApp1</display-name>
  <servlet>
    <servlet-name>ActionProcessorServlet</servlet-name>
    <display-name>ActionProcessorServlet</display-name>
    <servlet-class>ActionProcessorServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddItemsServlet</servlet-name>
    <display-name>AddItemsServlet</display-name>
    <servlet-class>AddItemsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowItemsServlet</servlet-name>
    <display-name>ShowItemsServlet</display-name>
    <servlet-class>ShowItemsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActionProcessorServlet</servlet-name>
    <url-pattern>/ActionProcessorServletAlias</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddItemsServlet</servlet-name>
    <url-pattern>/AddItemsServletAlias</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowItemsServlet</servlet-name>
    <url-pattern>/ShowItemsServletAlias</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>
 